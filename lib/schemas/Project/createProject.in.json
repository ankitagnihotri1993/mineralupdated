{
    "type": "object",
    "title": "The Root Schema",
    "required": [
      "project"
    ],
    "properties": {
      "project": {
        "type": "object",
        "title": "The Project Schema",
        "required": [
          "externalId",
          "name",
          "active"
        ],
        "properties": {
          "externalId": {
            "type": "integer",
            "title": "The Externalid Schema",
            "default": 0,
            "examples": [
              5757
            ]
          },
          "name": {
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": [
              "Test"
            ],
            "pattern": "^(.*)$"
          },
          "active": {
            "type": "boolean",
            "title": "The Active Schema",
            "default": false,
            "examples": [
              false
            ]
          }
        }
      }
    }
  }